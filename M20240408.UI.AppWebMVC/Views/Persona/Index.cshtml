@model IEnumerable<M20240408.EntidadesDeNegocio.PersonaM>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Personas</h1>
<form asp-action="Index">
    <div class="row">
        <div class="form-group col-md-5">
            <label  class="control-label">Nombre</label>
            <input type="text" name="nombrem" class="form-control" />
            
        </div>
        <div class="form-group col-md-5">
            <label  class="control-label">Apellido</label>
            <input type="text" name="apellidom" class="form-control" />
            
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <input type="submit" value="Buscar" class="btn btn-primary" />|
            <a class="btn btn-outline-primary" asp-action="Create">Crear Nueva persona</a>
        </div>
    </div>
</form>
<p>
   
</p>
<table class="table table-sm">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.NombreM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimientoM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SueldoM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusM)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.NombreM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimientoM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SueldoM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusM)
            </td>
            <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
